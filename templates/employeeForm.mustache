<form method="post">

    <div class="my-2">
        <label for="employeeName">Employee name</label>
        <input required id="employeeName" name="employeeName" class="form-control" type="text" value="{{employee.eName}}"/><!--mělo by být required-->
        {{#errors.name}}<div class="form-text text-warning">{{errors.name}}</div>{{/errors.name}}
    </div>
    <div class="my-2">
        <label required for="surname">Employee surname</label>
        <input id="surname" name="surname" class="form-control" type="text" value="{{employee.surname}}"/><!--mělo by být required-->
        {{#errors.surname}}<div class="form-text text-warning">{{errors.surname}}</div>{{/errors.surname}}
    </div>
    <div class="my-2">
        <label required for="job">Employee job</label>
        <input id="job" name="job" class="form-control" type="text" value="{{employee.job}}"/><!--mělo by být required-->
        {{#errors.no}}<div class="form-text text-warning">{{errors.no}}</div>{{/errors.no}}
    </div>
    <div class="my-2">
        <label for="Room">Room</label>
        <select name="room" id="room" class="select" data-mdb-filter="true">
            {{#rooms}}
                <option value="{{room_id}}">{{name}}</option>
            {{/rooms}}
        </select>
        {{#errors.room}}<div class="form-text text-warning">{{errors.room}}</div>{{/errors.room}}
    </div>
    <div class="my-2">
        <label for="keys">Keys</label>
        <select name="keys[]" id="keys" multiple class="select" data-mdb-filter="true">
            {{#keys}}
                <option value="{{room_id}}">{{name}}</option>
            {{/keys}}
        </select>
    </div>
    <div class="my-2">
        <label required for="wage">Wage</label>
        <input id="wage" name="wage" class="form-control" type="text" value="{{employee.wage}}"/>
        {{#errors.wage}}<div class="form-text text-warning">{{errors.wage}}</div>{{/errors.wage}}
    </div>
    <div class="my-2">
        <label for="login">Login</label>
        <input id="login" name="login" class="form-control" type="text" value="{{employee.login}}"/>
        {{#errors.login}}<div class="form-text text-warning">{{errors.login}}</div>{{/errors.login}}
    </div>
    <div class="my-2">
        <label for="password">Password</label>
        <input id="password" name="password" class="form-control" type="password" value=""/>
        {{#errors.password}}<div class="form-text text-warning">{{errors.password}}</div>{{/errors.password}}
    </div>
    <div class="my-2">
        {{#create}}<input type="hidden" name="action" value="create" />
            <input type="submit" value="Create" class="btn btn-primary" />{{/create}}
        {{#update}}<input type="hidden" name="action" value="update" />
            <input type="hidden" name="employee_id" value="{{employee.employee_id}}">
            <input type="submit" value="Update" class="btn btn-primary" />{{/update}}
        <a href='../employee'><button type="button" class="btn btn-primary">Back to employee listing.</button></a>
    </div>
</form>